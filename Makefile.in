# $Id$

PROGNAME := ocaml-bjack
DISTFILES := CHANGES COPYING TIPS Makefile.in README \
	bootstrap configure configure.ac \
	src/*.ml src/*.mli src/*.c src/Makefile.in src/META.in \
	src/*.h src/OCamlMakefile 
VERSION = @VERSION@

all clean install uninstall:
	$(MAKE) -C src $@

distclean: clean
	rm -rf doc/

doc:
	$(MAKE) -C src htdoc
	mkdir -p doc
	rm -rf doc/html
	mv src/doc/bjack/html doc
	rm -rf src/doc

dist:
	rm -rf $(PROGNAME)-$(VERSION)
	mkdir $(PROGNAME)-$(VERSION)
	cp -r --parents $(DISTFILES) $(PROGNAME)-$(VERSION)
	tar zcvf ../$(PROGNAME)-$(VERSION).tar.gz $(PROGNAME)-$(VERSION)
	rm -rf $(PROGNAME)-$(VERSION)

.PHONY: dist doc
